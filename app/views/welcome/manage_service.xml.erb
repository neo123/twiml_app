<?xml version="1.0" encoding="UTF-8"?>
<Response>
<% if @success == true %>
<% if !@customer_service.nil? %>
<Gather action="/welcome/place_order.xml?customer_id=<%= xml_parser(@customer_service.customer_id) %>&amp;service_id=<%= xml_parser(@customer_service.service_id)%>" numDigits=">=1" method="GET">
<Say>Please enter quantity.</Say>
</Gather>
<% else %>
<Gather action="/welcome/voice_reply.xml?client_id=<%= @customer.client_id%>" numDigits="1" method="GET">
<Say>Please enter valid option.</Say>
<Say>Press 1 for try again.</Say>
</Gather>
<% end %>
<!-- If customer doesn't input anything, prompt and try again. -->
<Say>Sorry, I didn't get your response.</Say>
<% if !@customer_service.nil? %>
<Gather action="/welcome/manage_service.xml?client_id=<%= xml_parser(@customer_service.customer.client_id) %>&amp;service_id=<%= xml_parser(@customer_service.service_id)%>" numDigits="1" method="GET">
<Say>Please Press 1 for try again.</Say>
<Say>Please Press 2 for end call.</Say>
</Gather>
<% else %>
<Hangup/>
<% end %>
<% else %>
<Hangup/>
<% end %>
</Response>